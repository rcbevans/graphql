{
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "ESNext",
        // TODO Refactor so that noImplicitAny is no longer needed
        "noImplicitAny": false,
        "resolveJsonModule": true
    }
}
